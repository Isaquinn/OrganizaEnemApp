<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tela_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isaquearaujo.organizaenem.TelaPrincipal">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/openmenu"
        android:background="@drawable/menu"
        app:layout_widthPercent="6.2%"
        app:layout_heightPercent="4%"
        app:layout_marginTopPercent="6.5%"
        app:layout_marginLeftPercent="4.5%"/>
    <android.support.v4.widget.DrawerLayout  android:id="@+id/drawer_layout"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true" tools:openDrawer="start">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerprincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawerPane"
            android:layout_gravity="start" android:fitsSystemWindows="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1.0">
                <LinearLayout
                    android:background="#0d567f"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".38">
                    <android.support.percent.PercentRelativeLayout
                        android:background="#0d567f"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/logo_conf"
                            app:layout_widthPercent="55%"
                            app:layout_heightPercent="75%"
                            app:layout_marginTopPercent="10%"
                            app:layout_marginLeftPercent="20.5%"/>
                        <TextView
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:text="OrganizaEnem"
                            app:layout_widthPercent="50%"
                            app:layout_heightPercent="10%"
                            app:layout_marginTopPercent="85%"
                            app:layout_marginLeftPercent="5%"/>
                    </android.support.percent.PercentRelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:background="#0d567f"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".62">
                    <ListView
                        android:layout_marginTop="10dp"
                        android:id="@+id/navList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/profileBox"
                        android:choiceMode="singleChoice"
                        android:background="#ffffffff" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
    </android.support.percent.PercentRelativeLayout>
</RelativeLayout>
